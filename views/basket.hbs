    <script src="https://use.fontawesome.com/c560c025cf.js"></script>
    <div class="container">
        <div class="card shopping-cart">
            <div class="card-header bg-dark text-light">
                <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                Shipping cart
                <a href=""></a>
                <div class="clearfix"></div>
            </div>

            <div class="card-body">
                <!-- PRODUCT -->
                {{#each basket}}
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-2 text-center">
                        <img class="img-responsive" src="http://placehold.it/120x80" alt="prewiew" width="120"
                            height="80">
                    </div>
                    <div class="col-12 text-sm-center col-sm-12 text-md-left col-md-6">
                        <h4 class="product-name"><strong>{{this.name}}</strong></h4>
                        <h4>
                            <small>£{{this.price}}</small>
                        </h4>
                    </div>
                    <div class="col-12 col-sm-12 text-sm-center col-md-4 text-md-right row">
                        <div class="col-3 col-sm-3 col-md-6 text-md-right" style="padding-top: 5px">
                            <h6><strong><span class="text-muted"></span></strong></h6>
                        </div>
                        <div class="col-4 col-sm-4 col-md-4">
                            <div class="quantity">
                                <input type="button" data-id="{{@key}}" onclick="increaseQuantity(event)" value="+"
                                    class="plus">
                                <input type="number" step="1" max="99" min="1" value="{{this.quantity}}" title="Qty"
                                    class="qty" size="4">
                                <input type="button" data-id="{{@key}}" onclick="decreaseQuantity(event)" value="-"
                                    class="minus">
                            </div>
                        </div>
                        <div class="col-2 col-sm-2 col-md-2 text-right">
                            <button {{!--type="button" --}} class="btn btn-outline-danger btn-xs" data-id="{{@key}}"
                                onclick="removeFromCart(event)">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <hr>
                {{/each}}
